<Window x:Class="Calculadora_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculadora_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Name="Display" Grid.ColumnSpan="4" TextAlignment="Right" FontSize="60"/>
            <Button Grid.Column="1" Grid.Row="4" Content="0" FontSize="30" Click="Button_Click"/>
            <Button Grid.Column="0" Grid.Row="3" Content="1" FontSize="30" Click="Button_Click"/>
            <Button Grid.Column="1" Grid.Row="3" Content="2" FontSize="30" Click="Button_Click"/>
            <Button Grid.Column="2" Grid.Row="3" Content="3" FontSize="30" Click="Button_Click"/>
            <Button Grid.Column="0" Grid.Row="2" Content="4" FontSize="30" Click="Button_Click"/>
            <Button Grid.Column="1" Grid.Row="2" Content="5" FontSize="30" Click="Button_Click"/>
            <Button Grid.Column="2" Grid.Row="2" Content="6" FontSize="30" Click="Button_Click"/>
            <Button Grid.Column="0" Grid.Row="1" Content="7" FontSize="30" Click="Button_Click"/>
            <Button Grid.Column="1" Grid.Row="1" Content="8" FontSize="30" Click="Button_Click"/>
            <Button Grid.Column="2" Grid.Row="1" Content="9" FontSize="30" Click="Button_Click"/>
            <Button Grid.Column="3" Grid.Row="1" Content="/" FontSize="30" Click="Button_Click"/>
            <Button Grid.Column="3" Grid.Row="2" Content="*" FontSize="30" Click="Button_Click"/>
            <Button Grid.Column="3" Grid.Row="3" Content="+" FontSize="30" Click="Button_Click"/>
            <Button Grid.Column="3" Grid.Row="4" Content="-" FontSize="30" Click="Button_Click"/>
            <Button Grid.Column="0" Grid.Row="4" Content="," FontSize="30" Click="Button_Click"/>
            <Button Grid.Column="2" Grid.Row="4" Content="=" FontSize="30" Click="Button_Click"/>
        </Grid>
        <StackPanel Grid.Column="1" Name="Anterior">
            <TextBlock Text="Historial" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="10"/>            
        </StackPanel>
    </Grid>
</Window>
